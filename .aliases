# git
alias gs='git status'
alias gd='git diff'
alias gpum='git pull upstream master'
alias gpom='git push origin master'
alias gtc='git commit -m "temp" --no-verify'
function gfpr() {
    git fetch upstream refs/pull-requests/$1/from:$2
    git checkout $2
}
function grl() {
    sha=$(command git rev-parse HEAD^1)
    git reset $sha
}

