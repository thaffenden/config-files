# files
function remove-copy() {
  if [[ "$1" == "" ]]; then
    search="."
  else
    search=$1
  fi
  IFS=$'\n' && for i in $(ls $search); do echo "$i"; mv $i ${i/\ copy\./\.}; done 
}

function unique-files() {
  if [[ "$1" == "" ]]; then
    search="."
  else
    search=$1
  fi
  find $search -type f -name "*.*" | awk -F. '{print $NF}' | sort -u
}

