{
  "coc.preferences.jumpCommand": "split",
  "coc.preferences.formatOnSaveFiletypes": ["markdown", "typescript", "python"],
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    },

    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "disableWorkspaceFolders": true,
      "filetypes": ["go"]
    }
  },
  "python.formatting.provider": "black",
  "python.pythonPath": "python3"
}
